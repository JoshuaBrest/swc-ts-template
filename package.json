{
  "name": "typescript-eslint-prettier-template",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run watch:build\" \"npm run watch:start\"",
    "watch:build": "swc ./src -o ./dist/index.js --watch",
    "watch:start": "NODE_ENV=development node ./dist/index.js",
    "build": "swc ./src -o ./dist/index.js",
    "start": "NODE_ENV=production node ./dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf ./dist"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.6",
    "@swc/core": "^1.3.107",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.4.1",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-packagejson": "^2.4.10",
    "typescript": "^4.9.5"
  }
}
